<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pq2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.washington.jackw117.quizdroid.PQ2">

    <TextView
        android:text="What is the average airspeed velocity of an unladen swallow?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/textView26" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/radioGroup12">

        <RadioButton
            android:text="I don't know that"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup10"
            android:layout_centerHorizontal="true"
            android:id="@+id/radioButton26" />

        <RadioButton
            android:text="What do you mean?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup10"
            android:layout_alignLeft="@+id/radioButton26"
            android:layout_alignStart="@+id/radioButton26"
            android:id="@+id/radioButton27" />

        <RadioButton
            android:text="African or European?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup10"
            android:layout_alignRight="@+id/radioButton26"
            android:layout_alignEnd="@+id/radioButton26"
            android:id="@+id/radioButton28" />

        <RadioButton
            android:text="blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup10"
            android:layout_alignRight="@+id/radioButton26"
            android:layout_alignEnd="@+id/radioButton26"
            android:id="@+id/radioButton29" />
    </RadioGroup>

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:id="@+id/button12"
        android:visibility="gone"/>
</RelativeLayout>
